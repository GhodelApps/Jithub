<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="vm"
            type="me.ajiew.jithub.data.response.EventTimeline" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_twelve"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_user"
            radius="@{20}"
            radiusShowPlaceholder="@{true}"
            radiusUrl="@{vm.actor.avatar_url}"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/dp_twelve"
            android:layout_marginVertical="@dimen/dp_double"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_single"
            android:text='@{vm.actor.display_login + " " + vm.type + " " + vm.repo.name}'
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:textSize="@dimen/sp_heading"
            app:layout_constraintStart_toEndOf="@id/iv_user"
            app:layout_constraintTop_toTopOf="@id/iv_user"
            app:layout_constraintBottom_toBottomOf="@id/iv_user"
            tools:text="aJIEw starred aJIEw/Jithub" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>